<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title">
      {{if .video.ID}} Edit {{ else }} Add New {{ end }} Video
    </h4>
    <div class="progress">
      <div class="progress-bar progress-lg progress-bar-custom progress-bar-striped" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <div id="errors"></div>
    <form id="video" class="form-horizontal" method="{{if .video.ID}}put{{ else }}post{{ end }}" action="/api/video" enctype="multipart/form-data">
      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Title" value="{{.video.Title}}">
      </div>
      <div class="form-group">
        <select id="top-level-categories" class="form-control" name="taxonomy_id">
          <option value="">- Category -</option>
        </select>
      </div>
      <div class="form-group">
        <input type="file" name="video_file" class="filestyle" data-iconname="fa fa-cloud-upload">
      </div>

      <input type="hidden" name="id" value="{{.video.ID}}">
      <input type="hidden" id="selected_taxonomy_id" value="{{.video.TaxonomyID}}">
      <input type="submit" class="form-control" value="Save">
    </form>
  </div>
</div>
