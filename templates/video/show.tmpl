<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Video Preview</h4>
        <a href="/admin/video/edit/{{ .video.ID }}">Edit this Video</a>
        <video id="cohesion-video" class="video-js" controls preload="auto" width="640" height="264" data-setup="{}">
          <source src="/api/video/stream/{{ .video.ID }}" type='video/mp4'>
          <p class="vjs-no-js">
            To view this video please enable JavaScript, and consider upgrading to a web browser that
            <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
          </p>
        </video>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
      <h4 class="page-title">Video Metadata</h4>
      <table class="video-meta">
        <tr><td>Title</td>
            <td>{{ .video.Title }}</td></tr>
        <tr><td>Category</td>
            <td>{{ .video.TaxonomyID }}</td></tr>
        <tr><td>File Name</td>
            <td>{{ .video.FileName }}</td></tr>
        <tr><td>GCP Storage Bucket</td>
            <td>{{ .video.StorageBucket }}</td></tr>
        <tr><td>GCP Storage Object</td>
            <td>{{ .video.StorageObjectName }}</td></tr>
        <tr><td>Created By</td>
            <td>{{ .video.CreatedBy.FullName }}</td></tr>
        <tr><td>Date Created</td>
            <td>{{ .video.Created }}</td></tr>
        {{ if .video.UpdatedBy }}
        <tr><td>Updated By</td>
            <td>{{ .video.UpdatedBy.FullName }}</td></tr>
        <tr><td>Date Updated</td>
            <td>{{ .video.Updated }}</td></tr>
        {{ end }}
      </table>
    </div>
</div>
